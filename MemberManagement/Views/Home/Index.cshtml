@model IEnumerable<MemberManagement.Data.Studio>
@{
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
{
    <div class="row pt-4 pb-3">
        <div class="form-group col-6 flex-fill">
            <input type="text" name="strSearch" placeholder="Search for Studio Name" />
            <button type="submit" class="btn btn-dark">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
        <btn class="col-6 text-end">
            <a asp-controller="Home" asp-action="Create" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i>
            </a>
        </btn>
    </div>
}

<div class="row pb-3">
    @foreach(var studio in Model)
    {
        <div class="col-lg-3 colcol-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <a asp-controller="Home" asp-action="Delete" asp-route-StudioID="@studio.StudioID">
                            <i class="bi bi-x-circle"></i>
                        </a>
                        <img src="@studio.StudioPic" class="card-img-top rounded"/>
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@studio.StudioName</p>
                        </div>
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-danger">Contact: @studio.StudioPhone</p>
                            <p class="card-title h5 text-dark opacity-75">Address: @studio.StudioAddress</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>