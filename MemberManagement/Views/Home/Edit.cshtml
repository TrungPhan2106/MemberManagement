@model StudioManagement.Data.Studio

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Studio</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post" class="row">         
            <div class="border p-3 mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StudioID" />
                <input asp-for="StudioPic" hidden />
                <div class="mb-3 row p-1">
                    <label asp-for="StudioName" class="p-0"></label>
                    <input asp-for="StudioName" class="form-control" />
                    <span asp-validation-for="StudioName" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="StudioAddress" class="p-0"></label>
                    <input asp-for="StudioAddress" class="form-control" />
                    <span asp-validation-for="StudioAddress" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="StudioPhone" class="p-0"></label>
                    <input asp-for="StudioPhone" class="form-control" />
                    <span asp-validation-for="StudioPhone" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="StudioPic" class="p-0"></label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

