@model MemberManagement.Data.Studio

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Create Studio</h2>
            </div>
        </div>
    </div>
    <div>

    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="StudioName" class="control-label"></label>
                    <input asp-for="StudioName" class="form-control" />
                    <span asp-validation-for="StudioName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudioAddress" class="control-label"></label>
                    <input asp-for="StudioAddress" class="form-control" />
                    <span asp-validation-for="StudioAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudioPhone" class="control-label"></label>
                    <input asp-for="StudioPhone" class="form-control" />
                    <span asp-validation-for="StudioPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudioPic" class="control-label"></label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
