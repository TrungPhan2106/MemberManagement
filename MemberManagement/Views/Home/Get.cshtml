@model MemberManagement.Data.Studio

@{
    ViewData["Title"] = "Get";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Get</h1>

<div>
    <h4>Studio</h4>
    <hr />
    <dl class="row">
        <div class="col-sm-5">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudioName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudioName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudioAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudioAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudioPhone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudioPhone)
            </dd>
        </div>
        <div class="col-sm-5">
            <dd class="col-sm-10">
                <img src="@Model.StudioPic" width="200" height="300"
                     style="border-radius: 5px; border: 1px solid #bbb9b9" />
            </dd>
        </div>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-StudioID="@Model?.StudioID" class="btn btn-primary mx-2">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>
