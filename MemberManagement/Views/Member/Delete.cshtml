@model StudioManagement.Data.Member

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Studio</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h3 class="text-danger">Are you sure you want to delete this?</h3>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="UserName" class="p-0"></label>
                    <input asp-for="UserName" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="FullName" class="p-0"></label>
                    <input asp-for="FullName" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="DateOfBirth" class="p-0"></label>
                    <input asp-for="DateOfBirth" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Email" class="p-0"></label>
                    <input asp-for="Email" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="PhoneNumber" class="p-0"></label>
                    <input asp-for="PhoneNumber" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Gender" class="p-0"></label>
                    <input value="@(Model.Gender ? "Male" : "Female")" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Address" class="p-0"></label>
                    <input asp-for="Address" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="JoinedDate" class="p-0"></label>
                    <input asp-for="JoinedDate" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ExpiredDate" class="p-0"></label>
                    <input asp-for="ExpiredDate" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="StudioID" class="p-0"></label>
                    <input asp-for="Studio.StudioName" disabled class="form-control" />
                </div>
                <div class="col-sm-5">
                    <div class="col-sm-10">
                        <dt>Avatar</dt>
                        @if (@Model.ImageUrl != null)
                        {
                            <img src="@Model.ImageUrl" width="200" height="300"
                                 style="border-radius: 5px; border: 1px solid #bbb9b9" />
                        }
                        else
                        {
                            <p><i class="bi bi-image"></i>Picture here</p>
                        }
                    </div>
                </div>
            </div>
        </form>    
        <form asp-action="Delete">
            <input type="hidden" asp-for="MemberId" />
            <input type="hidden" asp-for="MemberUUId" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="UpdatedDate" />
            <input type="hidden" asp-for="IsDeleted" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>

