@model MemberManagement.Data.Member

@{
    ViewData["Title"] = "Get";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Information</h1>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <div class="col-5">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateOfBirth)
            </dd>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @(Model.Gender ? "Male" : "Female")
            </dd>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.JoinedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JoinedDate)
            </dd>
        </div>
        <div class="col-sm-5">
            <dd class="col-sm-10">
            <dt>Avatar</dt>
                @if (@Model.ImageUrl != null)
                {
                <img src="@Model.ImageUrl" width="200" height="300"
                     style="border-radius: 5px; border: 1px solid #bbb9b9"/>
                }
                else
                {
                <p><i class="bi bi-image"></i>Picture here</p>
                }
            </dd>
        </div>
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-MemberId="@Model?.MemberId" class="btn btn-primary mx-2">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
